<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dibu"
        />
    <TextView
        android:id="@+id/tv_xian"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dibu"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.allen.library.SuperTextView
            android:id="@+id/alipay_stv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            stv:sLeftBottomTextColor="@color/tixin"
            stv:sLeftBottomTextSize="15sp"
            stv:sLeftBottomTextString="数亿用户都在用，安全可托付"
            stv:sLeftIconRes="@mipmap/alarm_ico3x"
            stv:sLeftTextColor="@android:color/black"
            stv:sLeftTextSize="24sp"
            stv:sLeftTextString="支付宝"
            stv:sLeftTvDrawableHeight="15dp"
            stv:sLeftTvDrawableWidth="40dp"
            stv:sLeftViewGravity="left_center"
            stv:sThumbResource="@drawable/thumb"
            stv:sTrackResource="@drawable/track"
            stv:sRightViewType="switchBtn"
            stv:sSwitchIsChecked="false"
            stv:sSwitchMinWidth="36dp"
            android:paddingRight="10dp"
            />

    </LinearLayout>


</LinearLayout>