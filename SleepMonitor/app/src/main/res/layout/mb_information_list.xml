    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_xian"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_height="0.5dp"
            android:background="@color/dibu"/>
        <com.allen.library.SuperTextView
            android:id="@+id/alipay_stv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            stv:sLeftBottomTextColor="@color/tv_danse"
            stv:sLeftBottomTextSize="15sp"
            stv:sLeftBottomTextString="周一，周二"
            stv:sCenterBottomTextColor="@color/tv_danse"
            stv:sLeftIconRes="@mipmap/alarm_ico3x"
            stv:sLeftTextColor="@color/tv_black"
            stv:sLeftTextSize="22sp"
            stv:sLeftTextString="小三"
            stv:sLeftTvDrawableHeight="15dp"
            stv:sLeftTvDrawableWidth="40dp"
            stv:sLeftViewGravity="left_center"
            stv:sRightIconRes="@mipmap/back_faxian3x"
            stv:sRightTextString="10:00"
            stv:sRightTextColor="@color/tv_danse"
            stv:sSwitchIsChecked="false"
            stv:sSwitchMinWidth="36dp"
            />

    </LinearLayout>


</LinearLayout>