<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff171b19"
    android:orientation="vertical">

    <com.ycl.framework.photoview.ScrollViewPager
        android:id="@+id/imagebrowser_svp_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip">

        <com.ycl.framework.photoview.PhotoTextView
            android:id="@+id/imagebrowser_ptv_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:text="11/11"
            android:textColor="#ffcdcdcd"
            android:textSize="34sp" />
    </LinearLayout>

</LinearLayout>